<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="container" fx:id="container" alignment="CENTER"
	prefHeight="500.0" prefWidth="300.0"
	xmlns="http://javafx.com/javafx/8.0.121"
	xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
			<children>
				<Label id="score" text="Score: " />
				<Label id="score_value" text="0000" />
			</children>
			<VBox.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</VBox.margin>
		</HBox>
		<GridPane id="board" alignment="CENTER"
			disable="true" gridLinesVisible="true" maxHeight="-Infinity"
			maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
			prefHeight="300.0" prefWidth="300.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" maxWidth="333.0"
					minWidth="10.0" prefWidth="300.0" />
				<ColumnConstraints hgrow="SOMETIMES" maxWidth="480.0"
					minWidth="10.0" prefWidth="300.0" />
				<ColumnConstraints hgrow="SOMETIMES" maxWidth="480.0"
					minWidth="10.0" prefWidth="300.0" />
				<ColumnConstraints hgrow="SOMETIMES" maxWidth="480.0"
					minWidth="10.0" prefWidth="300.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<VBox.margin>
				<Insets left="10.0" right="10.0" top="10.0" />
			</VBox.margin>
		</GridPane>
		<GridPane alignment="CENTER" prefHeight="200.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" maxWidth="333.0"
					minWidth="10.0" prefWidth="300.0" />
				<ColumnConstraints hgrow="SOMETIMES" maxWidth="480.0"
					minWidth="10.0" prefWidth="300.0" />
				<ColumnConstraints hgrow="SOMETIMES" maxWidth="480.0"
					minWidth="10.0" prefWidth="300.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Button id="btn_up" alignment="CENTER" contentDisplay="CENTER"
					maxHeight="120" maxWidth="220"
					mnemonicParsing="false" text="UP" textAlignment="CENTER"
					GridPane.columnIndex="1">
					<font>
						<Font name="System Bold" size="13.0" />
					</font>
				</Button>
				<Button id="btn_left" alignment="CENTER" contentDisplay="CENTER"
					maxHeight="120" maxWidth="220"
					mnemonicParsing="false" text="LEFT" GridPane.rowIndex="1">
					<font>
						<Font name="System Bold" size="13.0" />
					</font>
				</Button>
				<Button id="btn_down" alignment="CENTER" contentDisplay="CENTER"
					maxHeight="120" maxWidth="220"
					mnemonicParsing="false" text="DOWN" GridPane.columnIndex="1"
					GridPane.rowIndex="2">
					<font>
						<Font name="System Bold" size="13.0" />
					</font>
				</Button>
				<Button id="btn_right" alignment="CENTER" contentDisplay="CENTER"
					maxHeight="120" maxWidth="220"
					mnemonicParsing="false" text="RIGHT" GridPane.columnIndex="2"
					GridPane.rowIndex="1">
					<font>
						<Font name="System Bold" size="13.0" />
					</font>
				</Button>
			</children>
			<VBox.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</VBox.margin>
		</GridPane>
	</children>
</VBox>
